<div class='new-post-wrapper'>
  <button id='new-post-btn'>new post</button>
</div>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ul>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<script src="/javascript/post.js"></script>