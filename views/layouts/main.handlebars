            <a href='/login'>login/signup</a>
          {{/if}}
        </nav>
        <hr />
        <h1>The Tech Blog</h1>
      </header>
      <main>
        {{{body}}}
      </main>
      <hr />
      <footer>
        This site was created using mySql, express.js, and node.js by
        <a href='https://github.com/highdynamics'>HighDynamics</a>
      </footer>
    </div>
    {{#if loggedIn}}
      <script src='/javascript/logout.js'></script>
    {{/if}}
  </body>
</html>