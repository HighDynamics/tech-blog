<article class='post'>
  <div class='header'>
    <a href='/post/{{id}}'>
      <h2 class='title'>
        {{title}}
      </h2>
    </a>
    <div class='meta'>
      Authored by
      {{user.username}}
      on
      {{created_at}}
    </div>
  </div>
  <div class='content'>
    {{{addLineBreaks content}}}
  </div>
  <div class='comment-count'>
    {{comments.length}}
    comments
  </div>
</article>